<div class="d-flex justify-content-center">
  <div class="card checkin-form-card col-12 col-md-6 p-5">
    <h2 class="mb-5"><%= @event.title %></h2>
    <%= image_tag @event.cover, class: 'checkin-event-cover' %>
    <%= simple_form_for [@event, @checkin] do |f| %>
      <div class="mt-3">
        <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience" %>
      </div>
      <%= f.input :review %>
      <%= f.button :submit, value: 'Send', class: "btn btn-dark float-right" %>
      <%# if @benefit.id.present? %>
        <%#= link_to "Delete", benefit_path(@benefit), class: 'btn btn-danger', method: :delete %>
      <%# end %>
    <% end %>
  </div>
</div>
