<div class="container p-5 my-5" id="profile-container">
  <div class="d-flex">
    <% placeholder_url = 'https://www.wittenberg.edu/sites/default/files/2018-10/nouser_0.jpg' %>
    <%= image_tag(current_user.photo.present? ? current_user.photo.url : placeholder_url, width: 150, height: 150) %>
    <div class="flex-grow-1 d-flex flex-column align-items-center">
      <h1><%= current_user.name%></h1>
      <%= link_to "Edit Profile", edit_user_registration_path %>
    </div>
  </div>
</div>
