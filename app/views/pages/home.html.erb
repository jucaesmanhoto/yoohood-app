  <%#= render 'shared/event_card', events: @events %>
<!--</div>-->

<div class="mx-3">
  <h4 class="subheading my-1 mb-2 text-white"><%= t('.events_today') %></h4>
  <%= render 'shared/event_card', events: @events_today %>

  <h4 class="subheading my-1 mb-2 text-white"><%= t('.coming_up') %></h4>
  <%= render 'shared/event_card', events: @events_coming_up %>

  <h4 class="subheading my-1 mb-2 text-white"><%= t('.new_events') %></h4>
  <%= render 'shared/event_card', events: @events_recent %>

  <h4 class="subheading mt-5 mb-2 text-white"><%= t('.more_events') %></h4>
  <%= render 'shared/event_card', events: @events_diff %>
  <%= link_to events_path do %>
  <div class="d-flex justify-content-center">
    <button class="btn btn-outline-light deco-none mb-5"><%= t('.see_more') %></button>
  </div>
  <% end %>
</div>

