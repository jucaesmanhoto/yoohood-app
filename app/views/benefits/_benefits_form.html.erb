<div class="container">
  <%= simple_form_for [@event, @benefit] do |f| %>
    <div class="form-columns d-flex flex-row justify-content-center">
      <div class="right-column col-12 col-md-6">
          <%= f.input :name %>
          <%= f.input :quantity %>
          <%= f.input :value_in_points %>
      </div>
    </div>
    <div class="row justify-content-center">
      <%= f.button :submit, class: "btn btn-primary text-center" %>
    </div>
  <% end %>
</div>
