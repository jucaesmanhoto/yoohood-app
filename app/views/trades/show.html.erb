<div class="container card trade-card text-right my-5 col-12 col-sm-6 p-3">
  <div class="card-title px-3">
    <p><%= @trade.benefit.name %> to:</p>
    <h1><%= @trade.benefit.event.title %></h1>
  </div>
  <div class="card-body">
    <h3><%= @trade.user.name %></h3>
    <p><%= t('.balance_msg', points: @trade.user.points) %></p>
    <div class="benefit-owner-info mt-3">
      <p><%= t('.email_alert_msg') %></p>
      <h4><%= @trade.benefit.event.user.name %></h4>
      <h5><%= @trade.benefit.event.user.email %></h5>
    </div>
    <%= link_to t('.done'), event_path(@trade.benefit.event), class: "btn btn-dark mt-4" %>
    <div class="col-12 col-md-6">
      <button class="btn btn-block btn-dark mt-3" data-toggle="modal" data-target="#chatModal">Chat</button>
    </div>
  </div>
</div>

<!-- CHAT MODAL -->
<div class="modal" tabindex="-1" role="dialog" id="chatModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content invite-box">
      <div class="modal-header">
        <div class="d-flex-flex-column">
          <p class="modal-title text-black"><%= t('.invite_a_friend_to') %></p>
          <h2 class="modal-title text-align-center text-black"><%= @trade.benefit.event.title %></h2>
        </div>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

      </div>
      <div class="modal-footer">

      </div>
    </div>
  </div>
</div>
