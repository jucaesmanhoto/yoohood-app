<div class="row d-flex">
  <% events.each do |event| %>
    <div class="col-md-6 col-xl-4 mb-3 index-event-card" data-event-id="<%= event.id %>">
      <%= link_to event do %>
        <div class="city-tag d-flex align-items-center">
          <i class="fas fa-map-marker-alt mr-2"></i>
            <%= event.places[0].city %> / <%= event.places[0].state %>
        </div>
        <div class="card-size-index card-trip-index">
          <% placeholder_url = "https://images.unsplash.com/photo-1514525253161-7a46d19cd819?ixlib=rb-1.2.1&auto=format&fit=crop&w=2467&q=80" %>
          <%= image_tag event.cover.presence ? event.cover : placeholder_url %>
          <div class="card-trip-infos-index">
            <div class="d-flex justify-content-between">
              <div class="flex-column">
                <h2><%= truncate(event.title, length: 40) %></h2>
                <p class='mt-1'><%= event.places.first.name %></p>
              </div>
              <div class="flex-column">
               <p class='start-time-red-month-index'><%= event.start_time.strftime('%b').upcase %></p>
               <h5 class='start-time-day-index'><%= event.start_time.strftime('%d') %></h5>
              </div>

            </div>
            <!-- <div class="d-flex justify-content-between align-items-end mt-2"> -->
              <!-- <p><%#= truncate(event.description, length: 80) %></p> -->
              <!-- <div class="flex-column"> -->
              <!-- </div> -->
            <!-- </div> -->
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
