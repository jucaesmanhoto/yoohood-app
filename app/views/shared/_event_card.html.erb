<div class="row my-3">
  <% events.each do |event| %>
    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
      <%= link_to event do %>
        <div class="card-size card-trip">
          <% placeholder_url = "https://images.unsplash.com/photo-1514525253161-7a46d19cd819?ixlib=rb-1.2.1&auto=format&fit=crop&w=2467&q=80" %>
          <%= image_tag event.cover.presence ? event.cover : placeholder_url %>
          <div class="card-trip-infos">
            <div class="event-card-header px-2 d-flex align-items-start">
              <div class="flex-column mr-3">
                <p class='start-time-red-month'><%= event.start_time.strftime('%b').upcase %></p>
                <h5 class='start-time-day'><%= event.start_time.strftime('%d') %></h5>
              </div>
              <div class="d-flex flex-column">
                <h2><%= truncate(event.title, length: 42) %></h2>
                <!-- <p><%#= event.places.first.name %></p> -->
              </div>
            </div>
          </div>
          <div class="d-flex event-card-event-description align-items-end px-3">
            <p><%= truncate(event.description, length: 80) %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>



