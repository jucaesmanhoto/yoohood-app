<div class="form-group">
    <% @event.categories.each do |category| %>
      <span class="category-choice" style="background-color: <%= category.color_hex  %>" data-category-id="<%= category.id %>" >
        <%= category.name %>
        <%= link_to 'x', event_category_path(id: EventCategory.find_by(event: @event, category: category).id, event_id: @event.id), method: :delete, remote: true %>
      </span>
    <% end %>

    <div class="d-flex justify-content-end">
      <%= simple_form_for @event, url: event_event_category_path(@event), remote:true do |f| %>
        <%= f.input :categories, as: :select, collection: Category.all, input_html: { class: 'select-css' } %>
        <%= f.button :submit, t('.update'), class: 'btn btn-primary mb-2' %>
      <% end %>
    </div>
</div>
