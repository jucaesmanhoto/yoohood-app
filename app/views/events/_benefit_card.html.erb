<div class="container">
  <div class="row justify-content-center">
    <% @event.benefits.each do |benefit| %>
      <%= link_to current_user == @event.user ? edit_benefit_path(benefit) : root_path , class: "benefit-card card col-lg-4 mx-2 flex-row card-title justify-content-between" do %>
        <div class="benefit-quantity"><%= benefit.quantity %> ud.</div>
        <div class="benefit-name"><%= benefit.name %></div>
        <div class="benefit-value"><span><%= benefit.value_in_points %></span>pts</div>
      <% end %>
    <% end %>
  </div>
  <div>
  </div>
</div>
