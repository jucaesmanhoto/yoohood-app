<% content_for :meta_title, "#{@event.title} is on #{DEFAULT_META["meta_product_name"]}" %>
<% content_for :meta_image, cl_image_path(@event.cover) %>
<div class="container padding-top-page-content">
  <div class=" d-flex flex-column align-items-center">

    <div class="card-event col-md-10">

      <div class="card-info">

        <div class="d-flex flex-row">
          <% placeholder_url = "https://images.unsplash.com/photo-1514525253161-7a46d19cd819?ixlib=rb-1.2.1&auto=format&fit=crop&w=2467&q=80" %>
          <%= image_tag @event.cover.presence ? @event.cover : placeholder_url, class: "pic d-inline-flex", alt: "event cover" %>
           <div class="map" id="map" data-markers="<%= @markers.to_json %>"data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
        </div>

              <div class="categories px-3">
                <% if @event.user == current_user %>
                  <%= render 'categories' %>
                <% else %>
                  <% @event.categories.each do |category| %>
                    <span class="category-choice" style="background-color: <%= category.color_hex  %>" >
                      <%= category.name %>
                    </span>
                  <% end %>
                <% end %>
              </div>
        <div class="card-body">

            <div class="card-title d-flex flex-column">
              <div class="d-flex justify-content-between">
                <h2 class="pb-2 font-weight-bold">
                  <%= @event.title %>
                </h2>
                <div class="mb-3 flex-column">
                  <h5 class='start-time-day-show'><%= @event.start_time.day %></h5>
                  <p class='start-time-red-month'><%= @event.start_time.strftime('%b').upcase %></p>
                </div>
              </div>
              <div class="benefits">
                <%= render 'benefit_card' %>
              </div>
              <% if @event.user == current_user %>
                <%= link_to "+ Add a benefit", new_event_benefit_path(@event), class: 'btn btn-dark' %>
              <% end %>
              <button type="button" class="button-green text-white" data-toggle="modal" data-target="#inviteModal">Share Event</button>
          </div>

          <p class="">Location: <%= @event.places.first.address %></p>
          <p><%= @event.description %></p>
        </div>
      </div>

      <%= link_to "Back", events_path, class: "my-4 btn btn-outline-light float-left" %>
    </div>
  </div>
</div>

