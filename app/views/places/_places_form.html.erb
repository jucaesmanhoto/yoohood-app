<div class="container">
  <%= simple_form_for @place do |f| %>
    <div class="form-columns d-flex flex-row">
      <div class="left-column col-12 col-md-6 d-flex justify-content-start">
        <div class="picture-input d-flex flex-column align-items-end">
          <div class="frame">
            <%= image_tag "", id: "photo-preview", class: 'hidden' %>
          </div>
          <%#= f.input :front_picture, input_html: { style: 'display: none;'} %>
          <%= f.input :front_picture, input_html: { class: 'd-none photo-input' }, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Upload a photo' %>
          <%= f.hidden_field :front_picture_cache %>
        </div>
      </div>
      <div class="right-column col-12 col-md-6">
        <%= f.input :name %>
        <%= f.input :capacity %>
        <%= f.input :zipcode %>
        <%= f.input :city %>
        <%= f.input :address %>
        <%= f.input :state %>
        <%#= f.input :country %>
      </div>
    </div>
    <div class="row justify-content-center">
      <%= f.button :submit, class: "btn btn-primary text-center" %>
    </div>
  <% end %>
</div>

